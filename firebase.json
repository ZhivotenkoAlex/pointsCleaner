{
  "functions": {
    "source": "functions",
    "region": "europe-central2",
    "codebase": "default",
    "permissions": {
      "scheduler": true
    },
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "cd functions && npm run lint",
      "cd functions && npm run build"
    ],
    "runtime": "nodejs22"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
